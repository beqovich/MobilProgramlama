<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RecordActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/spaceback01"
        android:contentDescription="@string/app_name"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="400px"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/logokucuk" />


        <TextView
            android:id="@+id/textViewSKOR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skor 10000 puan"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="32sp" />


        <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ad ve Soyad Belirtip Skorunuzu Kaydedin"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />


        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/colorWhite"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Ad Soyad"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="Kaydet"
            android:textSize="24sp"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/textSonuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonYeniden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="Yeniden Oyna"
            android:textSize="24sp"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>