<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/try_background"
    tools:context=".MainActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginTop="150dp"
       android:layout_marginLeft="5dp"
       android:layout_marginRight="5dp"

       >

       <GridView
           android:id="@+id/gridView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:columnWidth="80dp"
           android:verticalSpacing="20dp"
           android:horizontalSpacing="5dp"
           android:numColumns="2"
           android:stretchMode="columnWidth"
           android:gravity="center"
           ></GridView>

   </LinearLayout>

    <ImageView
        android:id="@+id/folder_create"
        android:layout_width="wrap_content"
        android:layout_marginTop="320dp"
        android:background="@drawable/folder_created"
        android:layout_marginLeft="160dp"
        android:layout_height="wrap_content">
    </ImageView>
    <TextView
        android:id="@+id/text_folder_create"
        android:layout_width="wrap_content"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="70dp"
        android:textSize="36sp"
        android:textColor="@color/folder_text_color"
        android:text="Klasör Oluşturun"
        android:layout_height="wrap_content">
    </TextView>

</RelativeLayout>