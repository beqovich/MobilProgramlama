<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.idealkilo.About">
    <include layout="@layout/actionbar_app"
        android:id="@+id/actionbarAbout" />

    <TextView
        android:id="@+id/hakkımda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actionbarAbout"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="@string/hazirlayan"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/iletisim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hakkımda"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/iletisim"
        android:textColor="@android:color/black"/>

</RelativeLayout>